{
  "name": "plotbox-io/standards",
  "description": "PlotBox coding standards for PHP_CodeSniffer",
  "type": "phpcodesniffer-standard",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "PlotBox\\Standards\\": "src/"
    }
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/plotbox-io/php-git-ops"
    },
    {
      "type": "vcs",
      "url": "https://github.com/plotbox-io/phpcs-parse"
    },
    {
      "type": "vcs",
      "url": "https://github.com/plotbox-io/sarb"
    }
  ],
  "require": {
    "php": ">=8.1",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "squizlabs/php_codesniffer": "^3.7.1",
    "mediawiki/mediawiki-codesniffer": ">=40.0",
    "slevomat/coding-standard": "*",
    "rarst/phpcs-cognitive-complexity": "*",
    "escapestudios/symfony2-coding-standard": "*",
    "phpcompatibility/php-compatibility": "*",
    "plotbox-io/php-git-ops": "dev-master",
    "symfony/console": ">=6.0",
    "plotbox-io/phpcs-parse": "dev-master",
    "thecodingmachine/safe": "^3.3",
    "dave-liddament/sarb": "dev-master"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
